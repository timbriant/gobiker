<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileActivity"
    android:background="@color/lighterColor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        >
        <TextView
            android:id="@+id/create_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            style="@style/Toolbar.TitleText"
            android:text="@string/find_friends" />
    </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/white_rounded_box">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/profile_details"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:background="@drawable/border_bottom">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:id="@+id/person_full_name"
                android:layout_marginTop="15dp"
                android:textAlignment="textStart"
                style="@style/Headings.H1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_top"
                android:layout_below="@+id/person_full_name"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_detail_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.7">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/profile"
                        android:id="@+id/person_profile_pic"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/lightColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:id="@+id/person_gender"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/subtitleText"
                        style="@style/Subtitle.H7"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:id="@+id/person_phone"
                        android:textAlignment="textStart"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/subtitleText"
                        style="@style/Subtitle.H7"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/following_btn"
                        style="@style/TransparentBtn.Black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Following"
                        android:textAlignment="center"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/followers_btn"
                        style="@style/TransparentBtn.Black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Followers"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_btns"
                android:layout_below="@id/profile_top"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_send_friend_request_btn"
                    android:background="@drawable/rounded_float_btn"
                    android:text="Follow"
                    android:layout_centerHorizontal="true"
                    style="@style/SecondaryBtn.Positive"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    />

                <View
                    android:id="@+id/btndivider1"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08" />

                <Button
                    android:id="@+id/person_send_msg_btn"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button"
                    style="@style/SecondaryBtn.Negative"
                    android:text="Send Message"
                    android:textAllCaps="false"
                    android:letterSpacing="0"/>
            </LinearLayout>

