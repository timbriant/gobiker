<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_posts"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/border_bottom">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile"
        android:id="@+id/all_users_profile_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="user full name"
                android:textAlignment="textStart"
                style="@style/Headings.H5"
                android:id="@+id/all_users_profile_name"
                android:layout_weight="1.2"/>

            <TextView
                android:id="@+id/member_role"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Subtitle.H6"
                android:textColor="@color/subtitleText"
                android:layout_weight="0.8"
                ></TextView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>