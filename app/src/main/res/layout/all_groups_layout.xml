<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.home.GroupFragment"
    android:id="@+id/relativeLayout"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"
        android:id="@+id/group_pic"
        app:civ_border_color="@color/lightColor"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_pic"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Group Name"
        android:gravity="center"
        android:drawablePadding="2dp"
        style="@style/Headings.H6" />


<!--    <TextView-->
<!--        android:id="@+id/group_type"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/group_name"-->
<!--        android:layout_marginTop="1dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:text="Group Type"-->
<!--        android:gravity="center"-->
<!--        style="@style/Subtitle.H7" />-->

    <TextView
        android:id="@+id/group_joined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_name"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/subtitleText"
        style="@style/Subtitle.H7"
        />
</RelativeLayout>