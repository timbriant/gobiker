<!--                android:layout_marginTop="10dp"-->
<!--                />-->


            <Spinner
                android:id="@+id/settings_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                />

            <TextView
                android:id="@+id/settings_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/settings_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_below="@+id/settings_weight"
                android:layout_toEndOf="@+id/settings_height_text"
                android:layout_marginTop="10dp"
                />

            <Spinner
                android:id="@+id/settings_height_unit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                />

                <TextView
                    android:id="@+id/settings_age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/settings_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    />


