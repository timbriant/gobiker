<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="ph.com.team.gobiker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <activity android:name=".PhotoFullScreenActivity"></activity>
        <activity android:name=".ui.home.GroupDetailsActivity"></activity>
        <activity android:name=".FollowingActivity"></activity>
        <activity android:name=".FollowersActivity" />
        <activity android:name=".ClickCommentActivity" />
        <activity android:name=".LikesActivity" />
        <activity android:name=".LogoutActivity" />
        <activity
            android:name=".ui.chat.ChatActivity"
            android:parentActivityName=".PersonProfileActivity" />
        <activity android:name=".PersonProfileActivity" />
        <activity android:name=".FindFriendsActivity" />
        <activity android:name=".ui.chat.ChatGroupActivity" />
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".NavActivity" />
        <activity android:name=".SetupActivity" />
        <activity
            android:name=".CommentsActivity"
            android:parentActivityName=".NavActivity" />
        <activity
            android:name=".PostActivity"
            android:parentActivityName=".NavActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ClickPostActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".NavActivity"
            android:label="@string/title_activity_nav" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".ForgotEmailSent" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".SuccessVerification" />
        <activity android:name=".verification" />
        <activity android:name=".CreateAccount" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".ui.login.MainLoginActivity"
            android:label="@string/title_activity_main_login" />
        <activity android:name=".MainActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ui.map.NavigationStartActivity" />
        <activity android:name=".SetupWithExistingActivity"/>
        <activity android:name=".ui.map.CreateRoomForGroupRide"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>